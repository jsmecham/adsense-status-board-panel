
%header

  %h1 AdSense Status Board Widgets

%main

  %section.revenues
    %header
      .widgets
        - [ :today, :this_month, :last_month ].each do |period|
          .widget-container
            %iframe{ src: "earnings/#{period}", onload: "this.style.opacity = 1" }
            %button{ onclick: "location.href='panicboard://?url=#{CGI.escape(url("/earnings/#{period}?auth_token=#{current_user[:auth_token]}"))}&panel=diy'" }
